<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <TextView
            android:text="Make a Trip"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />
        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/trip_name"
            android:hint="Enter Trip Title"
            android:maxLines="2"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <LinearLayout
            android:background="@drawable/shape_view"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">
            <EditText
                android:paddingTop="20dp"
                android:id="@+id/autocomplete_fragment_source"
                android:hint="Source"
                android:maxLines="2"
                android:fontFamily="sans-serif"
                android:focusable="false"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <android.support.v7.widget.AppCompatTextView
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/ic_swap_horiz_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/autocomplete_fragment_destination"
                android:hint="Destination"
                android:textColorHint="@android:color/darker_gray"
                android:gravity="center"
                android:maxLines="2"
                android:focusable="false"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <Button
                android:id="@+id/trip_add"
                android:textColor="@color/white"
                android:text="ADD Trip"
                android:fontFamily="sans-serif"
                android:background="@drawable/button_shape"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        </LinearLayout>
</ScrollView>